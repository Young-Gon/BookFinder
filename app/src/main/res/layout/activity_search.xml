<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.search.SearchActivity">

    <data class="SearchActivityBinding">

        <variable
            name="vm"
            type="com.gondev.bookfinder.ui.search.SearchViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <EditText
            android:id="@+id/editTextSearch"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/selector_round_box"
            android:drawableStart="@drawable/ic_search"
            android:elevation="4dp"
            android:hint="@string/hint_search"
            android:imeOptions="actionSearch"
            android:importantForAutofill="no"
            android:inputType="text"
            android:paddingStart="6dp"
            android:text="@={ vm.keyword }"
            app:action="@{(v, actionId, event) -> vm.onClickSearch()}"
            app:layout_constraintTop_toTopOf="parent">
            <requestFocus />
        </EditText>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:paddingTop="58dp"
            app:hasFixedSize="@{true}"
            app:items="@{vm.prevKeywords}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@+id/editTextSearch"
            tools:listitem="@layout/item_keyword" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>